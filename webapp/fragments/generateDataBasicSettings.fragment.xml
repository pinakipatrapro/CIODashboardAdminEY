<core:FragmentDefinition xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
	<Panel id="idGenDataBasicSettingsPanel" expanded="true" expandable="true" headerText="Basic Settings">
		<InputListItem label="Clear data and regenerate">
			<CheckBox selected="{/generateData/clearAndRegenerate}"/>
		</InputListItem>
		<InputListItem label="Number of records to generate">
			<StepInput value="{/generateData/noOfRecords}" step="20" min="1"/>
		</InputListItem>
	</Panel>
</core:FragmentDefinition>